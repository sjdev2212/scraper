<section class='container-sm mt-5 border border-dark p-2 mb-2 border-opacity-50 rounded'>
<h2 class='fs-3 text-center  fw-normal text-danger-emphasis mt-5'>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email , class:'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class:'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password" , class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="text-center">
      <%= f.check_box :remember_me , class: 'form-check-input' %>
      <%= f.label :remember_me , class:'form-check-label' %>
    </div>
  <% end %>

  <div class="text-center">
    <%= f.submit "Log in" ,  class:'btn btn-outline-danger text-danger-emphasis'%>
  </div>
<% end %>

</section>
